<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Nimplex
        link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.2.0/css/all.css")
        link(rel="stylesheet" href="https://static.fontawesome.com/css/fontawesome-app.css")
        link(rel="stylesheet" href="/css/style.css")
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet")
        link(rel="shortcut icon", href="/assets/logobg-96.png", type="image/png")
        meta(name="Description" content="Programmer from Poland.")
        meta(name="theme-color" content="#0f0f0f")
        link(rel="manifest" href="manifest.json")
        meta(name="twitter:card" content="summary")
        meta(name="twitter:site" content="https://nimplex.xyz")
        meta(name="twitter:creator" content="@Nimplexy")
        meta(property="og:url" content="https://nimplex.xyz")
        meta(name="theme-color" content="#ebc334")
        meta(property="og:title" content="Nimplex - Personal Website")
        meta(property="og:description" content="Programmer from Poland.")
        meta(property="og:image" content="https://nimplex.xyz/assets/logobg.png")
    body(class="preload")
        h1#title Nimplex

        div#container
            div#projects
                h1 Projects
                for project of projects
                    div.project
                        div.info
                            div.title
                                p.title #{project.title}
                                for link of project.links
                                    a.link(href=link.url)
                                        i(class=link.name)
                            p.description #{project.description}
                        if projects.length - 1 !== projects.indexOf(project)
                            div.border
            div#contact
                h1 Contact
                for contact of contacts
                    a(href=contact.url)
                        i(class="fab fa-" + contact.name.toLowerCase())
                            p #{contact.name}
                    br
        script(src="/scripts/preload.js")
